@model E_Matura.Models.ViewModels.Questions.EditQuestionClosedAnswerVm
@{
    ViewBag.Title = "EditQuestion";
}

<h2>EditQuestion</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.EditorFor(c=>c.Text, new { htmlAttributes = new { @class = "form-control" }})
    </div>
    <div class="form-group">
        @Html.EditorFor(vm => vm.Points, new { htmlAttributes = new { @class = "form-control" }})
    </div>
    <div class="form-group">
        @Html.EditorFor(vm => vm.NumberInTest, new { htmlAttributes = new { @class = "form-control" }})
    </div>
    <div class="form-group">
        @for (int i = 0; i < Model.AnswerVms.Count; i++)
        {
            <div class="form-group">
                @Html.EditorFor(vm => vm.AnswerVms[i].Text, new { htmlAttributes = new { @class = "form-control", type = "textarea" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(vm => vm.AnswerVms[i].IsTrue, new { htmlAttributes = new { @class = "form-control"}})
            </div>
        }
    </div>
}